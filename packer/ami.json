{
    "builders": [
      {
        "type": "amazon-ebs",
        "vpc_filter": {
          "filters": {
            "tag:Name": "jegbu_vpc"
          }
        }, 
        "subnet_filter": {
          "filters": {
            "tag:Name": "Public Subnet AZ1"
          }
        },
        "security_group_filter": {
          "filters": {
            "tag:Name": "Jegbu SG"
          }
        },       
        "region": "us-east-1",
        "shared_credentials_file": "~/.aws/credentials",
        "profile": "default",
        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "amzn2-ami-hvm-2.0.20220128.1-x86_64-ebs",
            "root-device-type": "ebs"
          },
          "owners": ["099720109477"],
          "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ec2-user",
        "ami_name": "amazon-linux-ami {{timestamp}}",
        "security_group_id": "sg-0551b6b7b012b6579",
        "associate_public_ip_address": true
      }
    ],
    

    "provisioners": [
      {
          "type": "shell",
          "inline": [
            "sudo yum update -y",
            "sudo yum install -y httpd",
            "sudo systemctl enable httpd",
            "sudo systemctl start httpd",
            "sudo bash -c 'echo \"To err is human, but to really foul things up you need a computer. - Paul R. Ehrlich\" >> /var/www/html/index.html'"
          ]
      },
      {
        "type": "shell",
        "inline": [
            "sleep 30",
            "sudo shutdown -h now"
        ]
    }
  ]
}